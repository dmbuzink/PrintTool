{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "azure-pipelines": {
    "fileMatch": [ ".*-template?.*\\.ya?ml$" ],
    "enabled": true
  },
  "packageRules": [ 
    {
      "matchDatasources": ["azure-pipelines-tasks"],
      "extractVersion": "^(?<version>\\d+)"
    }
  ]
}
